{
  "name": "root",
  "version": "1.5.0",
  "engines": {
    "node": "^18.13.0 || ^20.9.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve dev-app",
    "start:module": "ng serve dev-module-app",
    "build": "yarn build:lib && yarn build:dev-app",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "test": "ng test",
    "lint": "ng lint angular-toaster && ng lint dev-app",
    "lint:fix": "ng lint angular-toaster --fix && ng lint dev-app --fix",
    "e2e": "ng e2e",
    "build:dev-app": "ng build dev-app",
    "build:lib": "ng build angular-toaster --configuration production",
    "build:schematics": "tsc -p ./packages/angular-toaster/schematics/tsconfig.json --outDir dist/angular-toaster/schematics",
    "test:schematics": "ts-node --project packages/angular-toaster/schematics/tsconfig.spec.json node_modules/jasmine/bin/jasmine.js packages/angular-toaster/schematics/**/*.spec.ts",
    "test:lib": "ng test angular-toaster",
    "test:lib:ci": "ng test angular-toaster  --browsers=ChromeHeadless --watch=false --code-coverage && cat ./coverage/angular-toaster/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "clean": "rimraf dist",
    "sass": "sass packages/angular-toaster/src/toaster.scss dist/angular-toaster/toaster.css",
    "uglifycss": "esbuild --bundle dist/angular-toaster/toaster.css --outfile=dist/angular-toaster/toaster.min.css --minify  --sourcemap=external",
    "copy": "cpx LICENSE dist/angular-toaster && cpx packages/angular-toaster/README.md dist/angular-toaster && yarn copystyles",
    "copystyles": "cpx \"packages/angular-toaster/src/lib/*.{css,css.map,min.css,scss}\" dist/angular-toaster",
    "package": "yarn clean && yarn build:lib && yarn sass && yarn uglifycss && yarn copy && yarn build:schematics",
    "prerelease": "yarn clean && yarn build:lib && yarn sass && yarn uglifycss && yarn copy && yarn build:dev-app",
    "release": "node scripts/release.js",
    "release:alpha": "node scripts/release.js --preId alpha",
    "release:beta": "node scripts/release.js --preId beta",
    "prepare": "husky || true",
    "serve:ssr:dev-module-app": "node dist/dev-module-app/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.0",
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "^17.1.0",
    "@angular/localize": "^17.1.2",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@angular/platform-server": "^17.1.0",
    "@angular/router": "^17.1.0",
    "@angular/ssr": "^17.1.2",
    "@ng-bootstrap/ng-bootstrap": "^16.0.0",
    "@popperjs/core": "^2.10.2",
    "bootstrap": "^5.3.2",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.2",
    "@angular-eslint/builder": "17.2.1",
    "@angular-eslint/eslint-plugin": "17.2.1",
    "@angular-eslint/eslint-plugin-template": "17.2.1",
    "@angular-eslint/schematics": "17.2.1",
    "@angular-eslint/template-parser": "17.2.1",
    "@angular/cli": "^17.1.1",
    "@angular/compiler-cli": "^17.1.0",
    "@changesets/cli": "^2.24.0",
    "@schematics/angular": "^17.1.1",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "angular-cli-ghpages": "^2.0.0-beta.2",
    "colors": "^1.4.0",
    "conventional-changelog-cli": "^2.2.2",
    "coveralls": "3.1.0",
    "cpx": "^1.5.0",
    "enquirer": "^2.3.6",
    "esbuild": "0.14.22",
    "eslint": "^8.56.0",
    "fs-extra": "^10.1.0",
    "husky": "^9.0.10",
    "jasmine": "~5.1.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "minimist": "^1.2.6",
    "ng-packagr": "^17.1.0",
    "rimraf": "^3.0.2",
    "sass": "^1.70.0",
    "semver": "^7.3.7",
    "shelljs": "^0.8.5",
    "ts-node": "10.7.0",
    "typescript": "~5.2.2"
  }
}